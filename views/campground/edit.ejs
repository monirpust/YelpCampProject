<%- include ('../partials/header') %>

<div class="container">
	<div>
		<div class="text-center">
			<h1>Edit <%= campground.name %></h1>
		</div>

		<div style=" margin: 25px auto; width: 50%;">
			<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[description]" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campground">Go Back</a>
		</div>

		
	</div>
</div>

<%- include ('../partials/footer') %>