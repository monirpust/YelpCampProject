<%- include ('../partials/header') %>

<div class="container">
	<div>
		<div class="text-center">
			<h1>Create a New Campground</h1>
		</div>

		<div style=" margin: 25px auto; width: 50%;">
			<form action="/campground/<%= campground._id %>/comments", method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comments[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/campground">Go Back</a>
		</div>

		
	</div>
</div>

